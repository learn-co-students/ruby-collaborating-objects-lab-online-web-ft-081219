   "version": "0.2.0",
   "configurations": [

      {
         "cwd": "${workspaceRoot}",
         "name": "Listen for rdebug-ide",
         "type": "Ruby",
         "request": "attach",
         "remoteHost": "127.0.0.1",
         "remotePort": "1234",
         "remoteWorkspaceRoot": "${workspaceRoot}/lib/song.rb"
      },
      
      {
         "name": "Debug Local File",
         "type": "Ruby",
         "request": "launch",
         "program": "${workspaceRoot}/lib/song.rb",
         "cwd": "${workspaceRoot}"
      },
   
   ]
}